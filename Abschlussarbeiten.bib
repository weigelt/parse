@MastersThesis{Guenes2015,
  Title                    = {Aufbau eines Sprachkorpus zur Programmierung autonomer Roboter mittels nat\"urlicher Sprache},
  Author                   = {Zeynep G\"unes},
  School                   = {Karlsruher Institut f\"ur Technologie (KIT) -- IPD Tichy},
  Year                     = {2015},
  Month                    = may,
  Type                     = {Bachelor's Thesis},

  Abstract                 = {Im Rahmen dieser Bachelorarbeit wird untersucht, wie Nutzer eine natürlich gesprochene Sprache (Englisch) verwenden, um einen humanoiden Roboter (ARMAR-III) neue Anweisungen beizubringen. 
Um solch eine Untersuchung durchführen zu können, braucht man eine Grundlage an Daten. 
Eine Sammlung dieser Daten nennt man einen Korpus. \newline
Für den Aufbau eines Sprachkorpus werden Sprachaufnahmen aufgenommen und dabei noch Kenndaten über den Sprecher, wie zum Beispiel die Herkunft, erfasst. 
Im weiteren Schritt wird für die Verwaltung und Pflege des Sprachkorpus ein Verwaltungssystem entworfen und implementiert.
Durch den Korpus erhält man sehr viele Testdaten mit denen man eine evaluationsgetriebene Entwicklung eines Systems zur Programmierung in natürlich gesprochener Sprache durchführen kann. Bei der Erstellung des Korpus wurden zunächst verwandte Arbeiten untersucht. 
Mit Hilfe der verwandten Arbeiten wurde ein Korpusaufbau analysiert und entworfen. 
Zudem wurde für die Verwaltung des Korpus ein Werkzeug implementiert.
Weiterhin wurden um eine grundlegende Sammlung erhalten zu können Sprachaufnahmen aufgenommen.
Anschließend wurde der Korpus evaluiert.},
  Owner                    = {Sebastian_Weigelt},
  Timestamp                = {2015.06.23},
  Url                      = {https://svn.ipd.kit.edu/trac/AliceNLP/wiki/Theses/hampel_ba}
}

@MastersThesis{Schneider2015,
  Title                    = {Entwurf einer Handlungsrepr\"asentation f\"ur gesprochene Sprache},
  Author                   = {Michael Schneider},
  School                   = {Karlsruher Institut f\"ur Technologie (KIT) -- IPD Tichy},
  Year                     = {2015},
  Month                    = may,
  Type                     = {Bachelor's Thesis},

  Abstract                 = {Um natürliche Sprache maschinell darzustellen und zu verarbeiten, wird eine logische Zwischenrepräsentation benötigt. Die Erstellung dieser Handlungsrepräsentation wird in dieser Arbeit vorgestellt. Dazu werden verschiedene Arbeiten, welche sich mit der Problemstellung natürliche Sprache zu modellieren auseinandergesetzt haben, vorgestellt. Anhand von Kriterien, welche sich durch das Gesamtprojekt PARSE ergeben, sowie Anforderungen, welche sich durch die natürliche Sprache ergeben, werden diese Arbeiten analysiert und diskutiert. Der aus der Analyse gewählte Graphen-basierte Ansatz, wird als Grundlage für einen Entwurf verwendet. Dazu wird ein Rahmenwerk für die entworfene Handlungsrepräsentation implementiert und vorgestellt. Die rein qualitative Evaluation der Handlungsrepräsentation zeigt erfolgreich die Darstellbarkeit der formulierten Anforderungen des implementierten Rahmenwerks der Handlungsrepräsentation.},
